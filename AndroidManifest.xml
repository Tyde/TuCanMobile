        android:label="@string/app_name"
        android:name="com.dalthed.tucan.TucanMobile" >
        <activity
            android:label="@string/app_name"
            android:name=".TuCanMobileActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="mainmenu"
            android:name=".ui.MainMenu"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>

        <!-- Vorlesungsverzeichnis -->
        <activity
            android:label="Vorlesungsverzeichnis"
            android:name=".ui.VV"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        <activity
            android:label="Vorlesungen"
            android:name=".ui.VV_Events"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>

        <!-- Prüfungen -->

        <activity
            android:label="Prüfungen"
            android:name=".ui.Exams"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
