<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/singleevent_row_date_linear"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/singleevent_row_date_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date" 
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/singleevent_row_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/singleevent_row_date_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#" 
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/singleevent_row_date_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Room"
            style="@style/mm_events_title"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
    <TextView
            android:id="@+id/singleevent_row_date_instructor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructor" 
           />

</LinearLayout>