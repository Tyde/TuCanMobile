<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_row"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/widget_daytitle"
        style="@style/widget_daytitlebar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:visibility="gone">

        <TextView
            android:id="@+id/widget_daytitlebartext"
            style="@style/widget_daytitlebartext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <FrameLayout 
            android:background="#ffffff"
            android:layout_height="2dip"
            android:layout_width="fill_parent"></FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/widget_event_room"
            android:layout_width="0dp"
            android:layout_weight="0.60"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            />

        <TextView
            android:id="@+id/widget_event_time"
            android:layout_width="0dp"
            android:layout_weight="0.40"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:gravity="right"
             />
    </LinearLayout>


        <TextView
            android:id="@+id/widget_event_name"
            style="@style/widget_event_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="2dp"
            />
</LinearLayout>